<html>
  <head>
    {% include './includes/header.html.twig' %}
    {% include './includes/googleChart.html.twig' %}
  </head>

  <body>
    {% include '/includes/navbar.html.twig' %}
    <div class="row">

      <div class="col s3 left">
        <div class="container">
          <h3>Stats</h3>
          <a class="waves-effect waves-grey btn-flat" id='player_stats'>Player Stats</a>
          <br>
          <a class="waves-effect waves-grey btn-flat" id='computer_stats'>Computer Stats</a>
          <br>
          <br>
          <br>
          <a class="waves-effect waves-grey btn-flat" id='computer_stats' href="/leaderboard">Leader Board</a>
        </div>
      </div>

      <div class="col s9 right">
        <div class="container">

                  <div id="player">
                    <h1 class="center">Player: {{ player1.name }}</h1>
                    <h3 class="center">Total Hands: {{ userStats.total }}</h3>
                    <div class="row">
                      <div class="col s4">
                        <h3>Wins:  {{ userStats.wins }}</h3>
                      </div>
                      <div class="col s4">
                        <h3>Losses: {{ userStats.losses }}</h3>
                      </div>
                      <div class="col s4">
                        <h3>Ties:  {{ userStats.ties }}</h3>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s4">
                        <h4>Match Wins:  {{ userMatches.wins }}</h4>
                      </div>
                      <div class="col s4">
                        <h4>Match Losses: {{ userMatches.losses }}</h4>
                      </div>
                      <div class="col s4">
                        <h4>Matches Played:  {{ userMatches.total }}</h4>
                      </div>
                    </div>
                    <div id="chart_div_player"></div>
                  </div>

                  <div id="computer">
                    <h1 class="center">HAL (The Computer)</h1>
                    <h3 class="center">Total Hands: {{ computerStats.total }}</h3>
                    <div class="row">
                      <div class="col s4">
                        <h3>Wins:  {{ computerStats.wins }}</h3>
                      </div>
                      <div class="col s4">
                        <h3>Losses: {{ computerStats.losses }}</h3>
                      </div>
                      <div class="col s4">
                        <h3>Ties:  {{ computerStats.ties }}</h3>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s4">
                        <h4>Match Wins:  {{ computerMatches.wins }}</h4>
                      </div>
                      <div class="col s4">
                        <h4>Match Losses: {{ computerMatches.losses }}</h4>
                      </div>
                      <div class="col s4">
                        <h4>Matches Played:  {{ computerMatches.total }}</h4>
                      </div>
                    </div>
                    <div id="chart_div_computer"></div>
                  </div>

        </div>
      </div>

    </div>

  </body>
</html>
