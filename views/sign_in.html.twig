<!DOCTYPE html>
<html>
  <head>
    {% include './includes/header.html.twig' %}
  </head>
  <body>
    {% include '/includes/navbar.html.twig' %}
    <div class="container">
      <h1 class='center'>Player Sign In</h1>
    </div>
      <div class="container">
        <br>
        <br>
        <div class="row">
          <div class="col s6">
            <form action="/new_player" method="post">
              <label for="new_name">Player Name</label>
              <input name="new_name" type="text" maxlength="255" required>
              <br>
              <br>
              <label for="new_password">Password</label>
              <input name="new_password" type="password" maxlength="255" required>
              <button type='submit' class="btn btn-info center">New Player</button>
            </form>
          </div>
          <div class="col s6">
            {% if players is not empty %}
              <form action="/player_sign_in" method="post">
                <label for="selected_player_one">Player Name</label>
                <select name="selected_player_one">
                    {% for player in players %}
                        <option value="{{player.getId}}">{{player.getName}}</option>
                    {% endfor %}
                </select>
                <br>
                <label for="password">Password</label>
                <input name="password" type="password" maxlength="255" required>
                <button type='submit' class="btn btn-info center">Sign In</button>
              </form>
            {% else %}
              <h3>No Players in database!</h3>
            {% endif %}
          </div>
        </div>
      </div>
  </body>
</html>
