<!DOCTYPE html>
<html>
  <head>
    {% include './includes/header.html.twig' %}
  </head>
  <body>
    {% include '/includes/navbar.html.twig' %}
      <div class="container">
        <h1 class='center'>Player Sign In</h1>
        <br>
        <br>
        <div class="row">

          <div class="col s6">
            <div class="card blue-grey darken-2 z-depth-2">
              <div class="card-content white-text">
                <span class="card-title">Sign In</span>
                {% if players is not empty %}
                  <form action="/player_sign_in" method="post">
                    <label for="player_name">Player Name</label>
                    <input type="text" name="player_name">
                    <br>
                    <br>
                    <label for="password">Password</label>
                    <input name="password" type="password" maxlength="255">
                    <button type='submit' class="btn btn-info center">Sign In</button>
                  </form>
                {% else %}
                  <h3>No Players in database!</h3>
                {% endif %}
              </div>
            </div>
          </div>

          <div class="col s6">
            <div class="card blue-grey darken-2 z-depth-2">
              <div class="card-content white-text">
                <span class="card-title">Create a New Player</span>
                <form action="/new_player" method="post">
                  <label for="new_name">Player Name</label>
                  <input name="new_name" type="text" maxlength="255" required>
                  <br>
                  <br>
                  <label for="new_password">Password</label>
                  <input name="new_password" type="password" maxlength="255">
                  <button type='submit' class="btn btn-info center">Create Player</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
