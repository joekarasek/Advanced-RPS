<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css" type="text/css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <meta charset="utf-8">
        <title>Super Rock Paper Scissors Fight!</title>
    </head>
    <body>
        <div class="container">
            <h1>Game Round</h1>
            <div class="row">
                <div class="col-sm-4">
                    <h2>{{player1['name']}}</h2>
                    <h3>Score: {{player1['score']}}</h3>
                </div>

                <div class="col-sm-4">

                    <form  action="/play" method="post">
                        <h3>Player 1 Chooses:</h3>
                        <select name="player_one_select">
                            <option value="rock">Rock</option>
                            <option value="fire">Fire</option>
                            <option value="scissors">Scissors</option>
                            <option value="sponge">Sponge</option>
                            <option value="paper">Paper</option>
                            <option value="air">Air</option>
                            <option value="water">Water</option>
                        </select>
                        <input type="hidden" name="player_one_id" value="{{player1['id']}}">
                        {% if player2['id'] != -1 %}
                            <h3>Player 2 Chooses:</h3>
                            <select name="player_two_select">
                                <option value="rock">Rock</option>
                                <option value="fire">Fire</option>
                                <option value="scissors">Scissors</option>
                                <option value="sponge">Sponge</option>
                                <option value="paper">Paper</option>
                                <option value="air">Air</option>
                                <option value="water">Water</option>
                            </select>
                        {% else %}
                            <input type="hidden" name="player_two_select" value="">
                        {% endif %}
                            <input type="hidden" name="player_two_id" value="{{player2['id']}}">

                        <br><br><button type="submit" class="btn btn-primary">Shoot!</button>

                    </form>
                    <div class="container">
                        {% if result is not empty %}
                            <h2>This round goes to...</h2>
                            <h1>{{result}}</h1>
                        {% endif %}


                        {% if player1['score'] == format %}
                            <h3>{{player1['name']}} Wins  {{player1['score']}} - {{player2['score']}}</h3>
                            <button><a href="/match_results">Register Match</a></button>
                        {% endif %}
                        {% if player2['score'] == format %}
                            <h3>{{player2['name']}} Wins  {{player2['score']}} - {{player1['score']}}</h3>
                            <button><a href="/match_results">Register Match</a></button>
                        {% endif %}
                    </div>
                    <div class="container">
                        <h4>End this match and start a new one</h4>
                        <p> The match will not be registered, but all rounds will be recorded</p>
                        <button><a href="/">Start Over</a></button>
                    </div>
                </div>

                <div class="col-sm-4">
                    <h2>
                    {{player2['name']}}
                    </h2>
                    <h3>Score: {{player2['score']}}</h3>

                </div>

            </div>
        </div>
    </body>
</html>
