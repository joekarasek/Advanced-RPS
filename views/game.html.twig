<!DOCTYPE html>
<html>
    <head>
        {% include './includes/header.html.twig' %}
    </head>
    <body>
        {% if player1['score'] >= match['win_number'] or player2['score'] >= match['win_number'] %}
            {% set matchEnded = true %}
        {% endif %}

        {% include '/includes/navbar.html.twig' %}

        <div class="container">


          <h1>Game Round</h1>
          <hr>

          <div class="row">

            <div class="col s5">
              <h4>{{player1['name']}}</h4>
              <h4>Score: {{player1['score']}}</h4>
            </div>

            <div class="col s5 offset-s2">
              <h4>{{player2['name']}}</h4>
              <h4>Score: {{player2['score']}}</h4>
            </div>

          </div>

          <br>

          {% include '/includes/winner_message.html.twig'%}
          <br>

          {% if matchOver %}

            <div class="row">
              <div class="col s6 offset-s3">
                <div class="card {{ matchOver.color }} darken-1">
                  <div class="card-content white-text">
                    <span class="card-title center">{{ matchOver.text }}</span>
                    <div class="card-action">
                      {% if matchOver.link1 %}
                        <a class='left' href="{{ matchOver.link1.link }}">{{ matchOver.link1.text }}</a>
                      {% endif %}
                      {% if matchOver.link2 %}
                        <a class='right' href="{{ matchOver.link2.link }}">{{ matchOver.link2.text }}</a>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>

          {% else %}

            {% if match['win_number'] == -1 %}
              <a href="/play_pVc/rock"><img src="/img/button_rock_hand.png" class="button_img"></a>
              <a href="/play_pVc/paper"><img src="/img/button_paper_hand.png" class="button_img"></a>
              <a href="/play_pVc/scissors"><img src="/img/button_scissors_hand.png" class="button_img"></a>
              <a href="/play_pVc/air"><img src="/img/button_air_hand.png" class="button_img"></a>
              <a href="/play_pVc/fire"><img src="/img/button_fire_hand.png" class="button_img"></a>
              <a href="/play_pVc/water"><img src="/img/button_water_hand.png" class="button_img"></a>
              <a href="/play_pVc/sponge"><img src="/img/button_sponge_hand.png" class="button_img"></a>

              <!-- <a href="/play_pVc/paper" class="btn-floating btn-large waves-effect waves-light black"><i class="material-icons">Pa</i>Paper</a>
              <a href="/play_pVc/scissors" class="btn-floating btn-large waves-effect waves-light purple"><i class="material-icons">Sc</i>Scissors</a>
              <a href="/play_pVc/air" class="btn-floating btn-large waves-effect waves-light blue lighten-2"><i class="material-icons">Ai</i>Air</a>
              <a href="/play_pVc/fire" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">Fi</i>Fire</a>
              <a href="/play_pVc/water" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">Wa</i>Water</a>
              <a href="/play_pVc/sponge" class="btn-floating btn-large waves-effect waves-light yello"><i class="material-icons">Sp</i>Sponge</a> -->
              <br>
              <br>
              <br>
              <a href="/main_menu" class="btn btn-info center">QUIT</a>
            {% else %}
              <a href="/match/play_pVc/rock" class="btn-floating btn-large waves-effect waves-light grey"><i class="material-icons">Ro</i>Rock</a>
              <a href="/match/play_pVc/paper" class="btn-floating btn-large waves-effect waves-light black"><i class="material-icons">Pa</i>Paper</a>
              <a href="/match/play_pVc/scissors" class="btn-floating btn-large waves-effect waves-light purple"><i class="material-icons">Sc</i>Scissors</a>
              <a href="/match/play_pVc/air" class="btn-floating btn-large waves-effect waves-light blue lighten-2"><i class="material-icons">Ai</i>Air</a>
              <a href="/match/play_pVc/fire" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">Fi</i>Fire</a>
              <a href="/match/play_pVc/water" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">Wa</i>Water</a>
              <a href="/match/play_pVc/sponge" class="btn-floating btn-large waves-effect waves-light yello"><i class="material-icons">Sp</i>Sponge</a>
            {% endif %}

          {% endif %}
        </div>
    </body>
</html>
